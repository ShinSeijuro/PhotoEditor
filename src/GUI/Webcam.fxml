<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.WebcamController">
    <top>
        <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: lightgray;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Select a camera" />
                <ComboBox fx:id="comboboxCameras" promptText="Choose camera" />
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
    </top>
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: lightgray;" BorderPane.alignment="CENTER">
            <children>
                <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" text="Capture" onAction="#onCapture">
                    <graphic>
                        <Label text="îœ¢">
                            <font>
                                <Font name="Segoe MDL2 Assets" size="20.0" />
                            </font>
                        </Label>
                    </graphic>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
    </bottom>
    <center>
        <StackPane fx:id="stackPane" minHeight="0.0" minWidth="0.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="imageView" fitHeight="${stackPane.height}" fitWidth="${stackPane.width}" pickOnBounds="true" preserveRatio="true" />
            </children>
        </StackPane>
    </center>
</BorderPane>
